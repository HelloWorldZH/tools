<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--带旋转动画的ImageView-->
    <declare-styleable name="waterRipplesView">
        <!--波的总个数-->
        <attr name="waveCount" format="integer"/>
        <!--程序一开始就播放波纹涟漪动画-->
        <attr name="waveOnLoad" format="boolean"/>
        <!--波的颜色-->
        <attr name="waveColor" format="color"/>
    </declare-styleable>
</resources>